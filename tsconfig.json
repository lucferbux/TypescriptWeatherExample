{
    "compilerOptions": {
        "types": ["googlemaps"],
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "downlevelIteration": true,
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "include": [
        "./src/**/*",
        "src/declaration.d.ts"
    ]
}